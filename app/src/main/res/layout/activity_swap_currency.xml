<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CryptoScreens.SwapCurrency">


    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/iv_back"
            android:text="@string/all_currencies" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etRate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="10sp"
                android:layout_toStartOf="@+id/spSpinner"
                android:inputType="number"
                />

            <Spinner
                android:id="@+id/spSpinner"
                android:background="#D3D3D3"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="To (Estimated)"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etTo"
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/spSpinnerTo"
                android:textSize="10sp"
                android:layout_height="45dp"/>

            <Spinner
                android:id="@+id/spSpinnerTo"
                android:background="#D3D3D3"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/swap_currency"
            android:id="@+id/btnSwap"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:visibility="gone"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <include layout="@layout/progress_dialog"
        android:id="@+id/rlProgress"
        android:visibility="gone"/>

</RelativeLayout>